[openmandriva-@DIST_ARCH@-@DIST_SECTION@-source]
name=OpenMandriva $releasever - @DIST_ARCH@ - @DIST_SECTION_NAME@ - Source
baseurl=http://abf-downloads.openmandriva.org/$releasever/repository/SRPMS/@DIST_SECTION@/release/
gpgcheck=1
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-OpenMandriva
enabled=0

[updates-@DIST_ARCH@-@DIST_SECTION@-source]
name=OpenMandriva $releasever - @DIST_ARCH@ - @DIST_SECTION_NAME@ - Updates - Source
baseurl=http://abf-downloads.openmandriva.org/$releasever/repository/SRPMS/@DIST_SECTION@/updates/
gpgcheck=1
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-OpenMandriva
enabled=0

[testing-@DIST_ARCH@-@DIST_SECTION@-source]
name=OpenMandriva $releasever - @DIST_ARCH@ - @DIST_SECTION_NAME@ - Test Updates - Source
baseurl=http://abf-downloads.openmandriva.org/$releasever/repository/SRPMS/@DIST_SECTION@/testing/
gpgcheck=1
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-OpenMandriva
enabled=0
