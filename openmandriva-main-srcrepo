[openmandriva-@DIST_ARCH@-source]
name=OpenMandriva $releasever - @DIST_ARCH@ - Source
baseurl=http://abf-downloads.openmandriva.org/$releasever/repository/SRPMS/main/release/
gpgcheck=1
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-OpenMandriva
enabled=0

[updates-@DIST_ARCH@-source]
name=OpenMandriva $releasever - @DIST_ARCH@ - Updates - Source
baseurl=http://abf-downloads.openmandriva.org/$releasever/repository/SRPMS/main/updates/
gpgcheck=1
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-OpenMandriva
enabled=0

[testing-@DIST_ARCH@-source]
name=OpenMandriva $releasever - @DIST_ARCH@ - Test Updates - Source
baseurl=http://abf-downloads.openmandriva.org/$releasever/repository/SRPMS/main/testing/
gpgcheck=1
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-OpenMandriva
