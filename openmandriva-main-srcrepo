[openmandriva-@DIST_ARCH@-source]
name=OpenMandriva $releasever - @DIST_ARCH@ - Source
#baseurl=https://mirrors.kernel.org/openmandriva/distrib/$releasever/@DIST_ARCH@/media/debug/core/release/
#metalink=https://mirrors.openmandriva.org/metalink?distrib=openmandriva-$releasever&arch=@DIST_ARCH@&section=core&repo=release&source=true
mirrorlist=https://www.openmandriva.org/mirrorlist/?release=$releasever&arch=@DIST_ARCH@&section=core&repo=release&source=1
gpgcheck=1
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-OpenMandriva
failovermethod=priority
enabled=0

