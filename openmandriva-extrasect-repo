[openmandriva-@DIST_ARCH@-@DIST_SECTION@]
name=OpenMandriva $releasever - @DIST_ARCH@ - @DIST_SECTION_NAME@
baseurl=http://mirror.yandex.ru/openmandriva/$releasever/repository/@DIST_ARCH@/@DIST_SECTION@/release/
#metalink=https://mirrors.openmandriva.org/metalink?repository=openmandriva-$releasever&arch=@DIST_ARCH@&section=@DIST_SECTION@&repo=release
#mirrorlist=https://www.openmandriva.org/mirrorlist/?release=$releasever&arch=@DIST_ARCH@&section=@DIST_SECTION@&repo=release
gpgcheck=1
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-OpenMandriva
failovermethod=priority
enabled=1

