[openmandriva-@DIST_ARCH@-@DIST_SECTION@]
name=OpenMandriva $releasever - @DIST_ARCH@ - @DIST_SECTION_NAME@
baseurl=http://abf-downloads.openmandriva.org/$releasever/repository/@DIST_ARCH@/@DIST_SECTION@/release/
gpgcheck=1
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-OpenMandriva
failovermethod=priority
enabled=1

[updates-@DIST_ARCH@-@DIST_SECTION@]
name=OpenMandriva $releasever - @DIST_ARCH@ - @DIST_SECTION_NAME@ - Updates
baseurl=http://abf-downloads.openmandriva.org/$releasever/repository/@DIST_ARCH@/@DIST_SECTION@/updates/
gpgcheck=1
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-OpenMandriva
failovermethod=priority
enabled=1

[testing-@DIST_ARCH@-@DIST_SECTION@]
name=OpenMandriva $releasever - @DIST_ARCH@ - @DIST_SECTION_NAME@ - Test Updates
baseurl=http://abf-downloads.openmandriva.org/$releasever/repository/@DIST_ARCH@/@DIST_SECTION@/testing/
gpgcheck=1
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-OpenMandriva
failovermethod=priority
enabled=0

